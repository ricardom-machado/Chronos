@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
    <div class="d-flex">
        <div class="breadcrumb">
            <a href="/Acao/New" class="breadcrumb-item"><i class="icon-add mr-2"></i> Novo</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="datatable-header">
                <form method="get">
                    <div class="panel-heading">
                        <div id="DataTables_Table_0_filter" class="dataTables_filter">
                            <label>
                                <span>Filter:</span>
                                <input id="search" name="search" class="" placeholder="Pesquisa" aria-controls="DataTables_Table_0" type="search">
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-left">
                        <a href="/Acao/New" class="btn btn-link btn-float text-default"><i class="icon-add text-primary"></i><span>Novo</span></a>
                    </div>
                </form>
            </div>

            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
                <div class="datatable-scroll">
                    <form action="/@ViewContext.RouteData.GetRequiredString("controller")/Delete" method="post" data-ajax="true" data-ajax-confirm="Deseja realmente excluir?"
                          data-ajax-success="indexDelete.ajax_success"
                          data-ajax-failure="indexDelete.ajax_failure">
                        <table class="table datatable-show-all dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                            <thead>
                                <tr role="row">
                                    <th style="width: 10px;" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending">#</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1">Número</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1">Descrição</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1">Fase</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1">Valor</th>
                                    <th style="width: 10px;" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1">
                                        <input type="submit" class="btn bg-danger-800" value="Deletar" />
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr role="row" class="odd">
                                        <td><a href="/@ViewContext.RouteData.GetRequiredString("controller")/Edit/@item.id"><i class="icon-pencil7"></i></a></td>
                                        <td class="sorting_1">@item.numeroProcesso</td>
                                        <td class="sorting_1">@item.descricao</td>
                                        <td class="sorting_1">@item.Rito.descricao</td>
                                        <td class="sorting_1">@String.Format("{0:C2}", item.valorCausa)</td>
                                        <td class="text-center">
                                            <input id="id" name="id" class="styled" type="checkbox" value="@item.id">
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>