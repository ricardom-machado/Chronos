@model Techjur.Models.DER.Acao
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-3 pt-2">
    <h2 class="mb-0 font-weight-semibold">
        @(Model.descricao)
    </h2>
    <span class="text-muted d-block">Número do processo: @(Model.numeroProcesso)</span>
    <span class="text-muted d-block">Classe: @(Model.Classe.descricao)</span>
    <span class="text-muted d-block">Assunto Principal: @(Model.Assunto.descricao)</span>
    <span class="text-muted d-block">Andamento processual: @(Model.Rito.descricao)</span>
</div>

<div class="timeline timeline-left">
    <div class="timeline-container">
        <div class="timeline-row">
            <div class="timeline-icon">
                <img src="../../global_assets/images/placeholders/vermelho.fw.png" alt="">
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card border-left-3 border-left-danger rounded-left-0">
                        <div class="card-body">
                            <div class="d-sm-flex align-item-sm-center flex-sm-nowrap">
                                <div>
                                    <ul class="list list-unstyled mb-0">
                                        <li>Fase: <span class="font-weight-semibold">Contestanção</span></li>
                                        <li>Movimento: <span class="font-weight-semibold"></span></li>
                                        <li>PRAZO: <span class="font-weight-semibold warning">22/03/2020 (faltam 2 dias para expirar)</span></li>
                                    </ul>
                                </div>

                                <div class="text-sm-right mb-0 mt-3 mt-sm-0 ml-auto">
                                    <h6 class="font-weight-semibold">VALOR DA CAUSA R$ 80.000,00</h6>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer d-sm-flex justify-content-sm-between align-items-sm-center">
                            <span>
                                <span class="badge badge-mark border-danger mr-2"></span>
                                <span class="font-weight-semibold">10/07/2019</span>
                            </span>
                            
                            <ul class="list-inline list-inline-condensed mb-0 mt-2 mt-sm-0">

                                <li class="list-inline-item dropdown">
                                    <a href="#" class="text-default dropdown-toggle" data-toggle="dropdown"><i class="icon-menu7"></i> SUAS AÇÕES </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a href="/Acao/Peticionar/@(Model.id)" class="dropdown-item"><i class="icon-pencil6"></i> Peticionar</a>
                                        <a href="#" class="dropdown-item"><i class="icon-archive"></i> Pesquisar Jurisprudência</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="timeline timeline-left">
    <div class="timeline-container">
